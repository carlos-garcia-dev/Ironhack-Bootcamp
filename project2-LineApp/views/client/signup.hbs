<div class="container">
    <div class="row justify-content-center frame">
        <div class="col-md-6">

            <h3>Regístrate</h3>

            <form action="/signup" method="POST">
                <div class='form-group'>
                    <label for='username'>Nombre de usuario</label>
                    <input name='username' type='text' class='form-control' placeholder='Nombre de usuario'
                        id='username'>
                </div>
                <div class='form-group'>
                    <label for='password'>Contraseña</label>
                    <input name='password' type='password' class='form-control' placeholder='Contraseña' id='password'>
                </div>
                <div class='form-group'>
                    <label for='email'>Email</label>
                    <input name='email' type='text' class='form-control' placeholder='Email' id='TO-DO'>
                </div>
                <button type='submit' class='btn-outline-dark rounded-0 btn-block'>Regístrate</button>
                {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}
            </form>

        </div>
    </div>