<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Regístrate</h1>

            <form action="/signup" method="POST">
                <div class='form-group'>
                    <label for='username'>Nombre de partner</label>
                    <input name='name' type='text' class='form-control' placeholder='Nombre de partner'
                        id='username'>
                </div>

                <div class='form-group'>
                    <label for='password'>Contraseña</label>
                    <input name='password' type='password' class='form-control' placeholder='******' id='password'>
                </div>

                <div class='form-group'>
                    <label for='email'>Email</label>
                    <input name='email' type='text' class='form-control' placeholder='E-mail' id='TO-DO'>
                </div>

                <div class='form-group'>
                    <label for='fiscalName'>Razón Social</label>
                    <input name='fiscalName' type='text' class='form-control' placeholder='******' id='TO-DO'>
                </div>

                <div class='form-group'>
                    <label for='cif'>CIF</label>
                    <input name='cif' type='text' class='form-control' placeholder='******' id='TO-DO'>
                </div>

                <div class='form-group'>
                    <label for='direction'>Dirección</label>
                    <input name='direction' type='texr' class='form-control' placeholder='Dirección' id='TO-DO'>
                </div>


                <button type='submit' class='btn btn-dark btn-block'>Regístrate</button>
                {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}
            </form>

        </div>
    </div>
</div>